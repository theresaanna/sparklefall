{
  "name": "sparklefall",
  "version": "1.0.0",
  "description": "Beautiful, customizable falling sparkle animations for your website. Zero dependencies, easy to use.",
  "main": "dist/sparklefall.js",
  "module": "dist/sparklefall.esm.js",
  "types": "dist/sparklefall.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "npm run build:main && npm run build:minify && npm run build:esm",
    "build:main": "cp src/sparklefall.js dist/sparklefall.js",
    "build:minify": "terser src/sparklefall.js -c -m -o dist/sparklefall.min.js",
    "build:esm": "node scripts/build-esm.js",
    "demo": "open examples/index.html",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "sparkle",
    "animation",
    "falling",
    "particle",
    "effects",
    "sparkles",
    "visual-effects",
    "ui",
    "frontend",
    "vanilla-js",
    "zero-dependency",
    "emoji",
    "confetti",
    "celebration"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/sparklefall.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/sparklefall/issues"
  },
  "homepage": "https://github.com/yourusername/sparklefall#readme",
  "devDependencies": {
    "terser": "^5.24.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}