{
  "name": "sparklefall",
  "version": "1.0.0",
  "description": "Beautiful, customizable falling sparkle animations for your website. Zero dependencies, easy to use.",
  "main": "dist/sparklefall.js",
  "module": "dist/sparklefall.esm.js",
  "types": "dist/sparklefall.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "npm run build:main && npm run build:minify && npm run build:esm",
    "build:main": "cp src/sparklefall.js dist/sparklefall.js",
    "build:minify": "terser src/sparklefall.js -c -m -o dist/sparklefall.min.js",
    "build:esm": "node scripts/build-esm.js",
    "demo": "open examples/index.html",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run test && npm run build"
  },
  "keywords": [
    "sparkle",
    "animation",
    "falling",
    "particle",
    "effects",
    "sparkles",
    "visual-effects",
    "ui",
    "frontend",
    "vanilla-js",
    "zero-dependency",
    "emoji",
    "confetti",
    "celebration"
  ],
  "author": "Theresa Summa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/theresaanna/sparklefall.git"
  },
  "bugs": {
    "url": "https://github.com/theresaanna/sparklefall/issues"
  },
  "homepage": "https://theresasumma.com/sparklefall",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "terser": "^5.24.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
